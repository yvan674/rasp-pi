<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="320.0"
          prefWidth="480.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" styleClass="root"
          fx:controller="rasppi.ClockController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="409.0" minWidth="10.0" prefWidth="390.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="226.0" minWidth="10.0" prefWidth="70.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="70.0" minHeight="70.0" prefHeight="70.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="70.0" minHeight="70.0" prefHeight="70.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="70.0" minHeight="70.0" prefHeight="70.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="319.0" minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="266.0" minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="126.0" minHeight="0.0" prefHeight="56.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets left="18.0"/>
    </padding>
    <children>
        <Text fx:id="Date"
              fill="WHITE"
              fontSmoothingType="LCD"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              GridPane.halignment="LEFT" GridPane.rowIndex="5" GridPane.valignment="TOP">
            <font>
                <Font name="Helvetica Neue Thin" size="17.0"/>
            </font>
            <GridPane.margin>
                <Insets left="7.0"/>
            </GridPane.margin>
        </Text>

        <Text fx:id="Day"
              fill="WHITE"
              fontSmoothingType="LCD"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              GridPane.rowIndex="4" GridPane.valignment="BOTTOM">
            <font>
                <Font name="Helvetica Neue Thin" size="17.0"/>
            </font>
            <GridPane.margin>
                <Insets left="7.0"/>
            </GridPane.margin>
        </Text>

        <Text fx:id="Time"
              fill="WHITE"
              fontSmoothingType="LCD"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              GridPane.rowIndex="2" GridPane.rowSpan="2" GridPane.valignment="BOTTOM">
            <font>
                <Font name="Helvetica Neue Thin" size="72.0"/>
            </font>
        </Text>

        <Pane id="right-pane" fx:id="rightPane"
              GridPane.columnIndex="1" GridPane.halignment="RIGHT"
              GridPane.rowSpan="6" GridPane.valignment="TOP"
              translateX="100"/>

        <Circle id="expand-shadow"
                radius="24"
                GridPane.columnIndex="1"
                GridPane.rowSpan="3" GridPane.rowIndex="3"
                GridPane.valignment="CENTER" GridPane.halignment="CENTER"
                translateY="10"/>

        <Button id="expand-button" fx:id="expandButton"
                GridPane.columnIndex="1"
                GridPane.rowSpan="3" GridPane.rowIndex="3"
                GridPane.valignment="CENTER" GridPane.halignment="CENTER"
                translateY="10"
                onAction="#expandButtonPressed"
        />

    </children>
    <stylesheets>
        <URL value="@clock.css"/>
    </stylesheets>
</GridPane>
